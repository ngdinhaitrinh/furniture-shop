@using WebBanNoiThat.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container" style="margin-top:100px">
        <hr />
        <h2>@ViewBag.Title.</h2>
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
              
                    <form id="account" method="post">                   
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <label asp-for="UserName" class="form-label"></label>
                            <input type="text" class="form-control" asp-for="UserName" aria-required="true" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
                        </div>
                        <div>
                            <p>
                                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword")
                            </p>
                            <p>
                                @Html.ActionLink("Đăng ký tài khoản", "Register")
                            </p>

                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-4">
                <section id="bg">

                </section>
            </div>
        </div>
    </div>
