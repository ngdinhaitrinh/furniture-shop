@model WebBanNoiThat.Models.ViewModels.OrderViewModel



<form asp-action="CheckOutADD" asp-controller="ShoppingCart" id="myForm" method="post">
    @Html.AntiForgeryToken()
    <h3>Thông tin khách hàng</h3>
    <div class="form-group">
        <label asp-for="CustomerName" class="control-label">UserName</label>
        <input asp-for="CustomerName" class="form-control" style="background:#fff;      />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" style="background:#fff; />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        @* <label>Số điện thoại</label>
        <input type="text" id="Phone" name="Phone" class="form-control" autocomplete="off" />*@
        <label asp-for="Phone" class="control-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" style="background:#fff;   />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Hình thức thanh toán</label>
        <select class="form-control" asp-for="TypePayment" name="TypePayment">
            <option value="1" selected>COD</option>
            <option value="2">Chuyển khoản</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success">Đặt hàng</button>
    </div>

</form>

